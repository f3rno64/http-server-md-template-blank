{
  "name": "serve-markdown-it-template-blank",
  "version": "1.0.2",
  "license": "MIT",
  "description": "Blank template skeleton for serve-markdown-it",
  "author": "Cris Mihalache <me@f3rno.com>",
  "main": "index.js",
  "engines": {
    "node": ">=11.14.0"
  },
  "files": [
    "index.js",
    "lib/**",
    "public/**",
    "res/**"
  ],
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/f3rno/server-markdown-it-template-blank.git"
  },
  "homepage": "https://github.com/f3rno/server-markdown-it-template-blank",
  "bugs": {
    "url": "https://github.com/f3rno/server-markdown-it-template-blank/issues"
  },
  "keywords": [
    "cli",
    "html",
    "markdown",
    "markdown-it",
    "serve-markdown-it",
    "sermit",
    "sermit-template",
    "nunjucks",
    "scss"
  ],
  "scripts": {
    "build": "pnpm clean-public && pnpm build-public && pnpm docs",
    "build-public": "node scripts/build_public.js",
    "clean-public": "rm -rf public/*",
    "docs": "rm -rf DOCUMENTATION.md && jsdoc2md -f index.js 'lib/**/*.js' test > DOCUMENTATION.md",
    "gen-readme": "rm README.md && node scripts/gen_readme.js",
    "lint": "pnpm lint-js && pnpm lint-scss",
    "lint-js": "eslint package.json '*.js' lib test",
    "lint-scss": "stylelint res/styles",
    "release": "pnpm update-version && git push origin main --follow-tags && npm publish",
    "test": "pnpm lint && pnpm unit",
    "unit": "NODE_ENV=test nyc mocha --recursive",
    "update-deps": "updates -u -g -c",
    "update-version": "standard-version"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "normalize-scss": "^7.0.1",
    "nunjucks": "^3.2.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@f3rno/eslint-config": "^1.1.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-classes": "^0.1.1",
    "eslint-plugin-clean-regex": "^0.4.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsdoc": "^28.5.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-mocha-cleanup": "^1.8.0",
    "eslint-plugin-new-with-error": "^2.0.0",
    "eslint-plugin-no-module-mutate": "^1.0.0",
    "eslint-plugin-no-smart-quotes": "^1.1.0",
    "eslint-plugin-no-useless-assign": "^1.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-package-json": "^0.1.4",
    "eslint-plugin-private-props": "^0.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-promise-catch": "^1.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-strict-newline": "^1.3.0",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-unicorn": "^20.1.0",
    "eslint-plugin-unused-imports": "^0.1.3",
    "eslint-plugin-why": "^1.2.0",
    "husky": "^4.2.5",
    "jsdoc-to-markdown": "^6.0.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "remark": "^15.0.1",
    "serve-markdown-it-lib": "^1.0.5",
    "standard-version": "^8.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "updates": "^10.2.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm test && pnpm docs && pnpm gen-readme && git add README.md DOCUMENTATION.md"
    }
  }
}
